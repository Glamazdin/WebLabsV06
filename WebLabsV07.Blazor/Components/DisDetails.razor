@if(Dish!=null)
{
    <img src="@imageSrc" class="img-thumbnail" width="150"/>
    <div>
        <p>@Dish.DishName - @Dish.Description</p>
        <div class="badge badge-info ">@Dish.Calories калорий</div>
    </div>
}



@code {
    [Parameter]
    public DishDetailsViewModel Dish { get; set; }
    [Parameter]
    public EventCallback<DishDetailsViewModel> DishChanged { get; set; }
    string imageSrc { 
        get
        {
            return $"https://localhost:44310/images/{Dish.Image}";
        } }
}
